<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/topbar"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="设置中心"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/back_bt"
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="@drawable/back" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
      <ImageView
                android:id="@+id/user_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/setting"
                android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_img"
            android:layout_marginLeft="10dp"
            android:text="用户名："
            android:textColor="@color/setting_text_color"
            android:textSize="18dp" />
<TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_tv"
            android:layout_marginLeft="2dp"
            android:text="yongyuan123"
            android:textColor="@color/setting_text_color"
            android:textSize="18dp" />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:alpha="0.1"/>
       <RelativeLayout
        android:id="@+id/layout_update"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
<ImageView
                android:id="@+id/update_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/self_refresh"
                android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/update_img"
            android:layout_marginLeft="10dp"
            android:textColor="@color/setting_text_color"
            android:text="检查新版本更新"
            android:textSize="18dp" />

<ImageView
                android:id="@+id/updatein_img"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/next"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:alpha="0.1"/>
    
       <RelativeLayout
        android:id="@+id/layout_aboutus"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
<ImageView
                android:id="@+id/us_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/us"
                android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/us_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/us_img"
            android:layout_marginLeft="10dp"
            android:textColor="@color/setting_text_color"
            android:text="关于我们"
            android:textSize="18dp" />

<ImageView
                android:id="@+id/usin_img"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/next"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:alpha="0.1"/>
       <RelativeLayout
        android:id="@+id/layout_modifypwd"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
<ImageView
                android:id="@+id/pwd_img"
                android:layout_width="14dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/modifypwd"
                android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pwd_img"
            android:layout_marginLeft="16dp"
            android:text="修改密码"
            android:textColor="@color/setting_text_color"
            android:textSize="18dp" />

<ImageView
                android:id="@+id/pwdin_img"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/next"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:alpha="0.1"/>
     
    <Button
            android:id="@+id/logout_bt"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:background="@color/red"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="18dp" />
</LinearLayout>
